# Environment configuration for the Hector service

# HTTP port the FastAPI app listens on
HECTOR_PORT=8000

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
HECTOR_LOG_LEVEL=INFO

# Environment name used in logs and health endpoint
HECTOR_ENVIRONMENT=development

# Database configuration
# Format: postgresql+asyncpg://user:password@host:port/database
HECTOR_DATABASE_URL=postgresql+asyncpg://hector:hector@localhost:5432/hector

# Database connection pool settings
HECTOR_DB_POOL_SIZE=5
HECTOR_DB_MAX_OVERFLOW=10
HECTOR_DB_ECHO=false

# JWT Authentication settings
# Secret key for signing tokens (generate with: openssl rand -hex 32)
HECTOR_JWT_SECRET_KEY=your-secret-key-here-change-in-production
HECTOR_JWT_ALGORITHM=HS256
HECTOR_ACCESS_TOKEN_EXPIRE_MINUTES=15
HECTOR_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS settings
# Comma-separated list of allowed origins (frontend URLs)
HECTOR_CORS_ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]
HECTOR_CORS_ALLOW_CREDENTIALS=true
